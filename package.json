{
  "name": "sendgrid-ruby",
  "version": "1.3.1",
  "description": "Sendgrid Ruby integration example",
  "author": "PatEvs",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/patevs/sendgrid-ruby.git"
  },
  "engines": {
    "node": ">=10",
    "npm": ">=6.8.0"
  },
  "scripts": {
    "commit": "git-cz",
    "updates": "npx ncu",
    "release": "np"
  },
  "dependencies": {},
  "devDependencies": {
    "@commitlint/cli": "^13.1.0",
    "commitizen": "^4.2.4",
    "commitlint-config-gitmoji": "^2.2.5",
    "cz-emoji": "^1.3.1",
    "husky": "^4.3.8",
    "np": "^7.6.1"
  },
  "commitlint": {
    "extends": [
      "gitmoji"
    ],
    "rules": {
      "subject-empty": [
        0,
        "never"
      ],
      "type-empty": [
        0,
        "never"
      ]
    }
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-emoji"
    },
    "cz-emoji": {
      "skipQuestions": [
        "body",
        "issues"
      ]
    }
  }
}
